# Use an official Node.js runtime as a parent image
FROM node:20

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Set the working directory in the container
WORKDIR /app

# Copy package.json and yarn.lock to leverage Docker cache
# This step is separate to avoid re-installing dependencies on every code change
COPY package.json yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy all source code and assets
COPY . .

# Docusaurus runs on port 3001 by default
EXPOSE 3001

# The command to start the Docusaurus development server
# Using direct command with proper host binding for Docker
CMD ["yarn", "start", "--host", "0.0.0.0", "--port", "3001"]